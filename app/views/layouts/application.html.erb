  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "The Gossip Project", root_path %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if moussaillon_signed_in? %>
              <li><%= link_to "Les gossips", gossips_path %></li>
              <li><%= link_to "Nouveau gossip", new_gossip_path %></li>
              <li><%= link_to "DÃ©connexion", destroy_moussaillon_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Se connecter", new_moussaillon_session_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>

<%= yield :top_content %>

<div class="container">
    <h1><%= yield :header %></h1>
  <%= yield %>
</div>

  </body>
</html>
